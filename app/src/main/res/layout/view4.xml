<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClicked"
        android:text="Button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintVertical_bias="0.931"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/pdf1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="pdf1"
        app:layout_constraintBottom_toTopOf="@+id/pdf3"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/pdf2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56"
        tools:layout_editor_absoluteY="139dp" />

    <Button
        android:id="@+id/pdf3"
        android:layout_width="135dp"
        android:layout_height="128dp"
        android:layout_marginBottom="289dp"
        android:layout_marginLeft="77dp"
        android:onClick="onButton"
        android:text="pdf3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/pdf2"
        android:layout_width="131dp"
        android:layout_height="135dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="8dp"
        android:onClick="onClicked"
        android:text="pdf2"
        app:layout_constraintBottom_toTopOf="@+id/pdf4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.552"
        tools:layout_editor_absoluteX="400dp" />

    <Button
        android:id="@+id/pdf4"
        android:layout_width="137dp"
        android:layout_height="132dp"
        android:layout_marginBottom="286dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="70dp"
        android:onClick="onButtonClick"
        android:text="pdf4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/pdf3"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>